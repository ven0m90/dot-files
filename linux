#kali-wsl
sudo apt update
sudo  apt install -y zsh*
curl https://gitlab.com/kalilinux/packages/kali-defaults/-/raw/kali/master/etc/skel/.zshrc -o ~/.zshrc
source ~/.zshrc
source /usr/share/zsh-autosuggestions/zsh-autosuggestions.zsh

sudo  chsh -s $(which zsh)
sudo  chsh -s /bin/zsh 


