sudo apt update  ; sudo apt clean ; sudo apt autoclean ; sudo apt upgrade -y ; sudo apt autoremove -y ;

sudo apt install -y zsh tar lolcat neofetch speedtest-cli git vim curl  python3 python3-pip  software-properties-common wget  nmap htop   p7zip-full  masscan   gdu  p7zip-full hydra  build-essential  libpcap-dev jq  

#zsh

sudo chsh -s /bin/zsh 
echo $SHELL
sudo rm -rf ~/.oh-my-zsh
wget https://github.com/robbyrussell/oh-my-zsh/raw/master/tools/install.sh -O - | zsh
git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions
git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting

curl -L https://raw.githubusercontent.com/ven0m90/my-os-setup/main/.zshrc -o ~/.zshrc

source  ~/.zshrc
